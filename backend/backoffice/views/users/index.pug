extends ../layout

block content
  - var userId = "id"
  - var userName = "name"
  .flex
    h1 Studenten
    h1 Docenten
  .flex
    table
      thead
        tr
          th actief
          th naam
          th actie
      tbody     
        each user, i in students
          tr
            td
              div(class=user.active == true ? 'active': 'inactive')
            td= user.name
            td.actions
              button(type='button' class='btn-icon' onclick='popup()') 
                i.fa.fa-pencil
              button(type='button' class='btn-icon' onclick='popup()')
                i.fa.fa-trash 
                  - userId = user._id
                  - userName = user.name
               

    table
      thead
        tr
          th actief
          th naam
          th actie
      tbody
        each user, i in teachers
          tr
            td
              div(class=user.active == true ? 'active': 'inactive')
            td= user.name
            td.actions
              button(type='button' class='btn-icon' onclick='popup()') 
                i.fa.fa-pencil
              button(type='button' class='btn-icon' onclick='popup()')
                i.fa.fa-trash 
                  - userId = user._id
                  - userName = user.name

  #alert.hide
    .box
      p Are you sure you want to delete #{userName}?
        form(method='post' action=`/backoffice/users/${userId}/delete`)
          button.btn(type='submit') Yes I want to delete this user.
        button.btn(onclick='hide()') No, do not delete this person. 
      
  script.
    var popup = function () {
      var alert = document.querySelector('#alert');
      alert.classList.remove('hide');
      alert.classList.add('visible');
    }
    var hide = function () {
        var alert = document.querySelector('#alert');
        console.log(alert);
        alert.classList.remove('visible');
        alert.classList.add('hide');
    }
