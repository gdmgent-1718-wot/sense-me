block content
  .flex
    h1 Docenten
    h1 Studenten
  .flex
    table
      thead
        tr
          th actief
          th naam
          th actie
      tbody
        each user, i in teachers
          tr
            td
              div(class=user.active == true ? 'active': 'inactive')
            td= user.name
             td.actions
              i.fa.fa-pencil
              i.fa.fa-trash

  
